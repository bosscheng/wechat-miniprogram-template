  border: #ededed solid 1px;   
}

.mp-searchbar-hooks{
  height: 108rpx;
}

.qr-code-btn{
  width: 80rpx;
  height: 108rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}

.scroll-list{
  margin-top: 16rpx;
  font-size: 28rpx;
  padding: 20rpx 24rpx;
  padding-bottom: 20rpx;
}


.scroll-list_item{
  margin-bottom: 24rpx;
  padding: 10rpx 20rpx;
  background:#fff;
  border-radius: 8rpx;
  overflow:hidden;
}

.list-finished{
  text-align: center;
  margin-top: 10rpx;
  color:#ccc;
}

.scroll-list_item:last-child {
  margin-bottom: 0;
}


